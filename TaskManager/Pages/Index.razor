@page "/"


<MudGrid>
    <MudItem xs="10">
        <MudTextField Label="Enter Todo Here..." @bind-Value="todoNow" Variant="Variant.Outlined"></MudTextField>
    </MudItem>
    <MudItem xs="2">
        <MudIconButton @onclick="()=>InsertItem()" Icon="@Icons.Filled.Save" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small" />
    </MudItem>
</MudGrid>
<MudGrid>
    @foreach(var item in todoList)
    {
        <MudItem xs="12">
            <MudCard>
                <MudCardContent>
                    <MudText Typo="Typo.body2">@item.Todo</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Text" @onclick="()=>deleteItem(item)" Size="Size.Small" Color="Color.Warning">Delete</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    }
</MudGrid>